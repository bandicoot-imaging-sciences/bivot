{
  "name": "@bandicoot-imaging-sciences/bivot",
  "version": "0.2.12",
  "description": "Bivot material viewer and editor, as a React component and pure JS library",
  "author": "volrak",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bandicoot-imaging-sciences/bivot.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "main": "dist/index.js",
  "module": "dist/index.modern.js",
  "source": "src/index.js",
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "build": "microbundle-crl --no-sourcemap --no-compress --format cjs --css-modules false",
    "start": "microbundle-crl watch --no-sourcemap --no-compress --format cjs --css-modules false",
    "prepare": "run-s build",
    "test": "run-s test:unit test:lint test:build",
    "test:build": "run-s build",
    "test:lint": "eslint .",
    "test:unit": "cross-env CI=1 react-scripts test --env=jsdom",
    "test:watch": "react-scripts test --env=jsdom",
    "predeploy": "cd example && npm install && npm run build",
    "deploy": "gh-pages -d example/build"
  },
  "peerDependencies": {
    "@material-ui/core": "^4.11.0",
    "react": ">=16.8.0",
    "react-dom": "^16.13.1"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.3",
    "cross-env": "^7.0.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-config-standard-react": "^9.2.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-standard": "^4.0.1",
    "gh-pages": "^2.2.0",
    "microbundle-crl": "^0.13.10",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.4",
    "react-scripts": "^3.4.3"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@material-ui/icons": "^4.9.1",
    "aws-sdk": "^2.713.0",
    "lodash.debounce": "^4.0.8",
    "react-color": "^2.18.1"
  }
}
